<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<AnchorPane id="AnchorPane" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="javafxpinger.FXMLDocumentController">
    <children>
      <VBox spacing="15.0">
         <children>
            <HBox prefHeight="42.0" prefWidth="800.0" spacing="15.0">
               <children>
                  <TextField fx:id="textField" prefHeight="26.0" prefWidth="325.0" promptText="Website Address" text="www.google.com" />
                  <Region HBox.hgrow="ALWAYS" />
                    <Button fx:id="button" onAction="#handleButtonAction" text="Ping" />
               </children>
               <padding>
                  <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
               </padding>
            </HBox>
            <Label fx:id="label2" text="Advanced Settings" />
            <HBox spacing="20.0">
               <children>
                  <RadioButton fx:id="ipv4" selected="true" text="IPv4">
                     <toggleGroup>
                        <ToggleGroup fx:id="tg" />
                     </toggleGroup></RadioButton>
                  <RadioButton fx:id="ipv6" text="IPv6" toggleGroup="$tg" />
                  <CheckBox fx:id="SoundCheckbox" mnemonicParsing="false" text="Ping Sound" />
                  <TextField fx:id="PingCountText" promptText="Ping Count" />
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </HBox>
            <ScrollPane prefHeight="334.0" prefWidth="792.0">
              <content>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="327.0" prefWidth="773.0">
                     <children>
                          <Label fx:id="label" layoutX="14.0" layoutY="14.0" minHeight="16" minWidth="69" text="Type Any Address to Ping" textAlignment="CENTER" />
                     </children>
                     <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </HBox.margin>
                  </AnchorPane>
              </content>
            </ScrollPane>
         </children>
         <padding>
            <Insets bottom="12.0" left="12.0" right="12.0" top="12.0" />
         </padding>
      </VBox>
    </children>
</AnchorPane>
